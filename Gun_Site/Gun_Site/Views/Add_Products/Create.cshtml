@model Gun_Site.Models.ProductDto
<link rel="stylesheet" href="~/css/Home.css" asp-append-version="true" />
@{
    ViewData["Title"] = "Create Product";
}

<div class="content form-page-wrapper">
    <div class="glass-card w-75">
        <h1 class="text-center">Create Product</h1>
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="form-group mb-3">
                <label asp-for="ProductName" class="control-label">Product Name</label>
                <input asp-for="ProductName" class="form-control" placeholder="Enter the product name" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ProductDescription" class="control-label">Product Description</label>
                <textarea asp-for="ProductDescription" class="form-control" placeholder="Provide a detailed description"></textarea>
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Category" class="control-label">Product Category</label>
                <select asp-for="Category" class="form-control">
                    <option value="">Select a Category</option>
                    <option value="Pistols">Pistols</option>
                    <option value="Semi Automatic Rifles">Semi Automatic Rifles</option>
                    <option value="CentreFire Rifles">CentreFire Rifles</option>
                    <option value="Shotguns">Shotguns</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ImageFilePath" class="control-label">Product Image</label>
                <input asp-for="ImageFilePath" class="form-control" type="file" />
                <span asp-validation-for="ImageFilePath" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Price" class="control-label">Product Price</label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Enter the price in decimal format" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>




<style>
    .form-page-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background-color: #f4f5f7;
        padding: 20px;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.8);
        box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
        border-radius: 12px;
        padding: 30px;
    }

    h1 {
        color: #333;
        font-weight: bold;
        font-size: 1.8rem;
        margin-bottom: 20px;
    }

    .form-group label {
        font-weight: bold;
        margin-bottom: 5px;
    }

    .form-control {
        border: 2px solid #ced4da;
        border-radius: 6px;
        transition: box-shadow 0.3s, border-color 0.3s;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.5);
        }

    .btn {
        background-color: #007bff;
        border: none;
        color: white;
        padding: 10px 20px;
        border-radius: 6px;
        transition: background-color 0.3s;
    }

        .btn:hover {
            background-color: #0056b3;
        }

    .text-danger {
        font-size: 0.9rem;
        margin-top: 4px;
    }
</style>


<footer class="footer bg-light">
    <div class="footer-part bg-dark py-4 border-bottom">
        <div class="container text-center">
            <div class="row">
                <div class="col-12">
                    <div class="d-flex justify-content-center align-items-center">
                        <h5 class="text-white mb-0 mr-3">Stay Connected</h5>
                        <input type="text" class="form-control mx-2" placeholder="Enter your email" style="width: 300px;">
                        <button type="button" class="btn btn-primary">Subscribe</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="footer-part bg-light py-3">
        <div class="container text-center">
            <div class="row">
                <div class="col-md-4">
                    <img src="/images/Circle_Logo.png" alt="Circle_Logo" class="Footer-logo" />
                </div>

                <div class="col-md-4">
                    <h5>Follow Us</h5>
                    <div class="social-icons">
                        <img src="/images/instagram.png" alt="Instagram" class="icon" />
                        <img src="/images/facebook.png" alt="Facebook" class="icon" />
                        <img src="/images/twitter.png" alt="Twitter" class="icon" />
                    </div>
                </div>

                <div class="col-md-4">
                    <h5>Get In Touch</h5>
                    <p>info@Thaslyn_Govender.co.za</p>
                    <p>+27 (0) 11-802-0735</p>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <p class="mt-3">© 2025 Iron Sight Firearms. All rights reserved.</p>
                    <p>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-area="Identity" asp-page="/Account/Logout" class="text-dark">Logout</a>
                        }
                        else
                        {
                            <a asp-area="Identity" asp-page="/Account/Login" class="text-dark">Login</a>
                        }
                    </p>

                </div>
            </div>
        </div>
    </div>
</footer>
