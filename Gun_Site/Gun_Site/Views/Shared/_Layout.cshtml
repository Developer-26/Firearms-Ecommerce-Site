<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Gun_Site.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/logo-styles.css" asp-append-version="true" />
</head>
<body>
    @{
        var controller = ViewContext.RouteData.Values["Controller"]?.ToString() ?? "";
        var action = ViewContext.RouteData.Values["Action"]?.ToString() ?? "";
    }

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="margin-bottom: 0px !important;">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <img src="/images/Logo_1.png" alt="Logo" class="navbar-logo" />
                </a>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark @(controller == "Home" && action == "Index" ? "active" : "")"
                               asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark @(controller == "About" && action == "Index" ? "active" : "")"
                               asp-area="" asp-controller="About" asp-action="Index">About Us</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark @(controller == "Products" && action == "Index" ? "active" : "")"
                               asp-area="" asp-controller="Products" asp-action="Index">Products</a>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark"
                                   href="#"
                                   id="addProductsDropdown"
                                   role="button"
                                   data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    Add Products
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="addProductsDropdown">
                                    <li>
                                        <a class="dropdown-item @(controller == "Add_Products" && action == "Create" ? "active" : "")"
                                           asp-area=""
                                           asp-controller="Add_Products"
                                           asp-action="Create">Create A Product</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item @(controller == "ProductSpecials" && action == "Create" ? "active" : "")"
                                           asp-area=""
                                           asp-controller="ProductSpecials"
                                           asp-action="Create">Create A Product on Special</a>
                                    </li>
                                </ul>
                            </li>


                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark"
                                   href="#"
                                   id="productsDropdown"
                                   role="button"
                                   data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    Products
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="productsDropdown">
                                    <li>
                                        <a class="dropdown-item @(controller == "Products" && action == "AnotherView" ? "active" : "")"
                                           asp-area=""
                                           asp-controller="Products"
                                           asp-action="AnotherView">View Products</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item @(controller == "ProductSpecials" && action == "Index" ? "active" : "")"
                                           asp-area=""
                                           asp-controller="ProductSpecials"
                                           asp-action="Index">View Product Specials</a>
                                    </li>
                                </ul>
                            </li>


                         
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

  

    


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

  

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
